pipeline {
    agent {label 'master'}
    stages {
        stage('PR-test') {
            agent {label 'master'}
            steps {
                script {
                    def customImage = docker.build("$BUILD_TAG", "--no-cache - < CICD/PR_test/Dockerfile.cpu")
                    customImage.inside("-u root") {
                        sh 'pip install --no-cache-dir -e .'
                        sh 'python test/run_pr_test.py'
                    }
                }
            }
        }
    }
    post {
        always {
            sh 'docker rmi "$BUILD_TAG"'
        }
    }
}