def IMAGE_TAG="$BUILD_TAG".toLowerCase()

pipeline {
    agent {label 'master'}
    environment {
        IMAGE_TAG="$IMAGE_TAG"
    }
    stages {
        stage('PR-test') {
            steps {
                script {
                    def customImage = docker.build("$IMAGE_TAG", "--no-cache - < CICD/PR_test/Dockerfile.cpu")
                    customImage.inside('-u root') {
                        sh 'pip install --user --no-cache-dir -e .'
                        sh 'python test/run_pr_test.py'
                        sh 'chmod -R 777 ./*'
                    }
                }
            }
        }
    }
    post {
        always {
            sh 'docker rmi "$IMAGE_TAG"'
        }
    }
}